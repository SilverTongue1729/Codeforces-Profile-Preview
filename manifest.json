{
  "manifest_version": 3,
  "name": "Codeforces Profile Preview",
  "version": "1.0",
  "description": "Shows a preview of Codeforces profiles when hovering over username links",
  "content_scripts": [
    {
      "matches": [
        "*://codeforces.com/*",
        "*://mirror.codeforces.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": []
}